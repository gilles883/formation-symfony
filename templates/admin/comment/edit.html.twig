{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire numéro {{comment.id}}{% endblock %}

{% block body %}
    
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°{{comment.id}}</h1>

        {{ form_start(form) }}

            <div class="alert alert-info">
                <strong>Annonce liée: </strong> 
                <a href="{{ path('ads_show', {'slug': comment.ad.slug}) }}" target="_blank"> {{comment.ad.title}} </a><br>
                <strong>Auteur: </strong>
                <a href="{{ path('user_show', {'slug': comment.author.slug}) }}" target="_blank"> {{comment.author.fullname}}</a><br>
                <strong>Date de création: </strong> {{comment.createdAt |date('d/m/Y H:i')}}<br>
                <strong>Note donnée: </strong>{{comment.rating}}<br>         
            </div>

            <div class="container bg-light mb-3">
                {{ form_widget(form) }}
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i>
                Enregistrer les modifications
            </button>
        {{ form_end(form) }}   
    </div>
{% endblock %}